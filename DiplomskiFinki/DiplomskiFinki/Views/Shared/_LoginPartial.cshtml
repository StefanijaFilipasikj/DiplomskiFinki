@using Microsoft.AspNetCore.Identity

<ul class="navbar-nav">
@if (User.Identity.IsAuthenticated)
{
    <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fa fa-user"></i> @User.Claims.ElementAt(22).Value</a>
    </li>
    <li class="nav-item">
        <form class="form-inline" asp-action="Logout" asp-controller="Account" method="post">
                <button type="submit" class="nav-link btn btn-link"><i class="fa fa-sign-out"></i> Одјава</button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <form class="form-inline" asp-action="ExternalLogin" asp-controller="Account" method="post">
            <button type="submit" class="nav-link btn btn-link"><i class="fa fa-sign-in"></i> Најава</button>
        </form>
    </li>
}
</ul>